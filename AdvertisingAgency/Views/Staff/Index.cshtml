@model IEnumerable<AdvertisingAgency.Models.User>

@{
    ViewData["Title"] = "Пользователи";
}

<div class="container mt-5" style="width:600px">
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-3">Назад</a>
        <h2>@ViewData["Title"]</h2>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-success">Создать нового пользователя</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Логин</th>
                    <th>Роль</th>
                    <th style="width: 1%; white-space: nowrap;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Login</td>
                        <td>@item.Role</td>
                        <td>
                            <div class="d-flex justify-content-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Редактировать</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
