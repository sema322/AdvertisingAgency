@model IEnumerable<AdvertisingAgency.Models.Client>

@{
    ViewData["Title"] = "Клиенты";
}

<div class="container mt-5" style="width:600px">
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-3">Назад</a>
        <h2>@ViewData["Title"]</h2>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>