@model IEnumerable<AdvertisingAgency.Models.Category>

@{
    ViewData["Title"] = "Категории рекламы";
}

<div class="container mt-5" style="width:600px">
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-3">Назад</a>
        <h2>@ViewData["Title"]</h2>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-success">Создать новую категорию</a>
    </p>

    <table class="table table-striped table-hover" style="width:600px;">
        <thead class="table-dark">
            <tr>
                <th class="col-8">Название</th>
                <th class="col-4">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <div class="d-flex justify-content-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>