@model Advertising

@{
    ViewData["Title"] = "Создать заявку";
}

<div class="container mt-5" style="width:600px">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="ProductName" class="form-label">Название продукта</label>
            <input asp-for="ProductName" class="form-control" required />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="form-label">Категория</label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateStart" class="form-label">Дата начала</label>
            <input asp-for="DateStart" type="date" class="form-control" value="@ViewBag.DefaultDateStart" required />
            <span asp-validation-for="DateStart" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Duration" class="form-label">Продолжительность (в днях)</label>
            <input asp-for="Duration" type="number" class="form-control" required />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Создать</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var categorySelect = document.getElementById("CategoryId");
            if (categorySelect && categorySelect.options.length > 0) {
                categorySelect.value = @ViewBag.DefaultCategoryId;
            }
        });
    </script>
}
